{
  "name": "every-cell-is-code",
  "version": "1.0.0",
  "description": "An infinite canvas where every cell is a live JavaScript worker",
  "main": "docs/index.html",
  "type": "module",
  "scripts": {
    "dev": "browser-sync start --server docs --no-open -w --no-ui",
    "dev-public": "browser-sync start --server docs --no-open -w --no-ui --tunnel",
    "prepare": "husky"
  },
  "author": {
    "name": "Pavel Voronin",
    "url": "https://github.com/pavel-voronin"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "browser-sync": "^3.0.4",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "localtunnel": "^2.0.2",
    "prettier": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
